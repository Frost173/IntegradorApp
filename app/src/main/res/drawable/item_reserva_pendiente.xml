<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:elevation="2dp"
    android:layout_gravity="center_horizontal"
    android:backgroundTint="#FFFFFF"
    android:backgroundTintMode="src_in"
    android:layout_marginBottom="6dp"
    android:background="@drawable/bg_reserva_item">

    <!-- Texto de informaciÃ³n de reserva -->
    <TextView
        android:id="@+id/txtReservaInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserva de ABC123"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtFechaHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/07/2025 08:00 - 10:00"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp" />

    <!-- Botones Aceptar / Rechazar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="end">

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnRechazar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rechazar"
            android:layout_marginStart="8dp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
