<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvPlaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placa"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#1976A6" />

    <TextView
        android:id="@+id/tvHoraEntrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora Entrada"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvHoraSalida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora Salida"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/tvPagoHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pago/hora"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/tvUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UbicaciÃ³n"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/tvReservaDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle de la reserva"
        android:layout_marginTop="8dp"
        android:textColor="#444444"
        android:textSize="14sp" />
</LinearLayout>

