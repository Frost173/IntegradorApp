<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvPlaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placa"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1976A6" />

        <TextView
            android:id="@+id/tvTipoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Vehículo"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvEstacionamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estacionamiento: "
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvEspacio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Espacio: "
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvHoraEntrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora Entrada"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvHoraSalida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora Salida"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvPagoTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pago: S/ 0.00"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textStyle="italic"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvReservaDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle de reserva"
            android:layout_marginTop="4dp"
            android:textColor="#888888" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
