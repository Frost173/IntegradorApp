<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TÍTULO CENTRAL -->
        <TextView
            android:id="@+id/tvNombreEstacionamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Estacionamiento"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- CAMPO: Fecha -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccionar fecha"
            android:focusable="false"
            android:background="@drawable/field_background"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- CAMPO: Hora de Entrada -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora de Entrada"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/etHoraEntrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccionar hora"
            android:focusable="false"
            android:background="@drawable/field_background"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- CAMPO: Hora de Salida -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora de Salida"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/etHoraSalida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccionar hora"
            android:focusable="false"
            android:background="@drawable/field_background"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- CAMPO: Tipo de Vehículo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Vehículo"
            android:textSize="16sp"/>
        <Spinner
            android:id="@+id/spTipoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/field_background"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- CAMPO: Tarifa por hora -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarifa por hora"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/etTarifa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:background="@drawable/field_background"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- CAMPO: Horas estimadas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horas estimadas"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/etHorasEstimadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:background="@drawable/field_background"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- CAMPO: Precio Total -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio Total"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/etPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:enabled="false"
            android:background="@drawable/field_background"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- CAMPO: Placa del vehículo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placa del vehículo"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/etPlaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:background="@drawable/field_background"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"/>

        <!-- BOTÓN FINAL -->
        <Button
            android:id="@+id/btnReservar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservar"
            android:backgroundTint="#1976A6"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
