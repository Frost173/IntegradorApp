<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- ScrollView para todo el contenido deslizable -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barraInferior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Barra superior azul -->
            <View
                android:id="@+id/barraSuperior"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#1976A6"/>

            <!-- Título centrado -->
            <TextView
                android:id="@+id/tvEstacionamientoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estacionamiento:"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"/>

            <!-- Campos en fila (todos los campos en una columna vertical) -->
            <LinearLayout
                android:id="@+id/layoutCampos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <!-- Fecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:id="@+id/tvFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha"
                        android:textSize="15sp"
                        android:textColor="#222"/>
                    <EditText
                        android:id="@+id/etFecha"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="01/05/25"
                        android:focusable="false"
                        android:paddingHorizontal="15dp"
                        android:background="@drawable/bg_edittext"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:inputType="none"/>
                </LinearLayout>

                <!-- Hora de Entrada -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:id="@+id/tvHoraEntrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora de Entrada"
                        android:textSize="15sp"
                        android:textColor="#222"/>
                    <EditText
                        android:id="@+id/etHora"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="00:10"
                        android:paddingHorizontal="15dp"
                        android:focusable="false"
                        android:background="@drawable/bg_edittext"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:inputType="none"/>
                </LinearLayout>

                <!-- Hora de Salida -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:id="@+id/tvHoraSalida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora de Salida"
                        android:textSize="15sp"
                        android:textColor="#222" />
                    <EditText
                        android:id="@+id/etHoraSalida"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="01:20"
                        android:paddingHorizontal="15dp"
                        android:focusable="false"
                        android:background="@drawable/bg_edittext"
                        android:drawableEnd="@drawable/ic_arrow_drop_down"
                        android:inputType="none" />
                </LinearLayout>

                <!-- Tipo de Vehículo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:id="@+id/tvTipoVehiculo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de Vehículo"
                        android:textSize="15sp"
                        android:textColor="#222"/>
                    <Spinner
                        android:id="@+id/spTipoVehiculo"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_edittext"/>
                </LinearLayout>

                <!-- Tarifa -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:id="@+id/tvTarifaPorHora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tarifa por hora"
                        android:textSize="15sp"
                        android:textColor="#222"/>
                    <EditText
                        android:id="@+id/etTarifa"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="S/. 10.00"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_edittext"/>
                </LinearLayout>

                <!-- Horas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:id="@+id/tvColorVehiculo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horas"
                        android:textSize="15sp"
                        android:textColor="#222"/>
                    <EditText
                        android:id="@+id/etColor"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="1"
                        android:paddingHorizontal="18dp"
                        android:background="@drawable/bg_edittext"/>
                </LinearLayout>

                <!-- Precio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:id="@+id/tvPrecio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio"
                        android:textSize="15sp"
                        android:textColor="#222"/>
                    <EditText
                        android:id="@+id/etPrecio"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="1"
                        android:paddingHorizontal="18dp"
                        android:background="@drawable/bg_edittext"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Botón Reservar -->
            <Button
                android:id="@+id/btnReservar"
                android:layout_width="220dp"
                android:layout_height="56dp"
                android:text="Reservar"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/bg_button_rounded"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"/>

            <!-- Si quieres que el RecyclerView también sea deslizable junto con el formulario, ponlo aquí -->
            <!--
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReservas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>
            -->
        </LinearLayout>
    </ScrollView>

    <!-- Barra inferior fija -->
    <LinearLayout
        android:id="@+id/barraInferior"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:background="@android:color/transparent"
            android:contentDescription="Inicio"
            android:scaleType="centerInside"
            android:maxWidth="32dp"
            android:maxHeight="32dp"
            android:padding="8dp"/>

        <ImageButton
            android:id="@+id/btnCalendario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/calendario"
            android:background="@android:color/transparent"
            android:contentDescription="Reserva"
            android:scaleType="centerInside"
            android:maxWidth="32dp"
            android:maxHeight="32dp"
            android:padding="8dp"/>

        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/perfil"
            android:background="@android:color/transparent"
            android:contentDescription="Perfil"
            android:scaleType="centerInside"
            android:maxWidth="32dp"
            android:maxHeight="32dp"
            android:padding="8dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
