<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chatLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- Contenedor principal -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF">

            <!-- ðŸ”™ BotÃ³n Flecha -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnFlecha"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/chat_flecha"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="BotÃ³n flecha"
                android:rotation="180"
                android:scaleType="centerInside"
                app:tint="#216896"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp" />

            <!-- ðŸ·ï¸ TÃ­tulo -->
            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MensajerÃ­a"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnFlecha"
                app:layout_constraintEnd_toStartOf="@id/ivUsers"
                app:layout_constraintBottom_toBottomOf="@id/btnFlecha"
                app:layout_constraintHorizontal_bias="0.5"
                android:gravity="center"/>

            <!-- ðŸ‘¤ Icono Perfil -->
            <ImageView
                android:id="@+id/ivUsers"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/perfil"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"/>

            <!-- ðŸŸ¦ Franja 'Usuarios' -->
            <TextView
                android:id="@+id/tvUsuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuarios"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/bg_franja_usuarios"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/btnFlecha"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>



            <!-- ðŸŸ¢ Usuarios conectados -->
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_franja_usuarios"
                app:layout_constraintTop_toBottomOf="@id/tvUsuarios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Usuario 1 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/perfil"
                            android:background="@drawable/circle_green"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Leonardo"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Usuario 2 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/perfil"
                            android:background="@drawable/circle_green"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ana"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- ðŸ’¬ SecciÃ³n de Chats -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvChats"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvUsuarios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="120dp"
                android:backgroundTint="#0057FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#0057FF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chats"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- AquÃ­ se cargarÃ¡ la lista dinÃ¡mica de chats -->
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
