<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/txtMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monto a pagar: S/ 0.00"
        android:textSize="20sp"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:id="@+id/imagenQR"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/qr_yape" />

    <TextView
        android:id="@+id/txtEscanea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escanea el código con Yape"
        android:textSize="16sp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Josue Enrique Trujillo Sante"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+51 984 249 223"
        android:textSize="16sp"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/btnCopiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copiar número"
        android:layout_marginTop="12dp" />
</LinearLayout>

